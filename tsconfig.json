{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "types": ["vite/client"],
    "rootDir": ".",
    "baseUrl": "."
  },
  "include": [
    "src/**/*.{ts,tsx,vue}",
    "env.d.ts"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}